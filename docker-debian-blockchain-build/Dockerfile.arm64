FROM --platform=arm64 donbeave/debian-blockchain-base AS build

RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y --no-install-recommends \
               build-essential \
               linux-headers-arm64 \
               musl-dev \
               git \
    && apt-get autoremove -y \
    && rm -rf /var/lib/apt/* \
              /var/cache/apt/* \
              /tmp/*

RUN mise install go@1.23.12
RUN mise install go@1.25.0

RUN mise use -g --pin go@1.25.0
